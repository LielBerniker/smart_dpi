{
  "extension": {
    "name": "Smart Dpi Configuration",
    "product-url": "https://github.com/LielBerniker/smart_dpi",
    "provider": "lielbe@checkpoint.com",
    "version": "1.3",
    "extension-version-requirements": {
      "minimum-version": "1.3"
    } 
  },
  "locations": [
    {
      "location": "details-pane",
      "relevant-types": ["gateways"],
      "ui-element": {
        "type": "tab",
        "caption": "Smart-Dpi",
        "tooltip": "Update Smart Dpi configuration",
        "action": {
          "details-level": "full",
          "method": "get",
          "trigger-id": "gateways-details-pane",
          "url": "index.html"
        }
      }
    }
  ],
  "requested-permissions": {
    "client": ["get-read-only-session", "run-read-only-commands"],
    "pre-approved-commands": ["add-host",
                              "set-host",
                              "delete-host",
                              "delete-group"]
  }
}